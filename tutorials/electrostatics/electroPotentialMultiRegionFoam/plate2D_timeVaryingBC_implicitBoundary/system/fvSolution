FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
#include "../configuration/config"

solvers
{
    ePotential
    {
        solver petsc;
        implicitRegionCoupling true;

        petsc
        {
            options
            {
                ksp_type  cg;
                pc_type  hypre;
                mat_type  aij;
            }
            caching
            {
                matrix
                {
                    update never;
                }

                preconditioner
                {
                    update never;
                }
            }
        }
        tolerance       1e-9;
        relTol          0;
        maxIter         2000;
    }
}

ePotentialControls
{
    nNonOrthogonalCorrectors    0;
}

