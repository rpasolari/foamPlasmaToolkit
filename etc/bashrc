# Determine foamPlasmaToolkit root directory (one level above this file)
export FOAM_PLASMA=$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)
alias foamPlasmaToolkit='cd "$FOAM_PLASMA"'

export FOAM_PLASMA_ETC="$FOAM_PLASMA/etc"

export FOAM_PLASMA_TUTORIALS="$FOAM_PLASMA/tutorials"

export FOAM_PLASMA_SRC="$FOAM_PLASMA/src"

export FOAM_PLASMA_THIRD_PARTY="$FOAM_PLASMA/ThirdParty"
