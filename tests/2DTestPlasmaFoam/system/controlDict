#include "../configuration/config"

libs
(
    "libcoupledElectricPotentialFvPatchScalarField.so"
);

application     plasmaFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         $endTime;

deltaT          $deltaT;

writeControl    timeStep;

writeInterval   $writeInterval;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

