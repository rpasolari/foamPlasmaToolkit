FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      topoSetDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

actions
(
    // leftFluid
    {
        name    leftFluidCellSet;
        type    cellSet;
        action  new;
        source  boxToCell;
        box     (0 0 0) (5 10 1);
    }
    {
        name    leftFluid;
        type    cellZoneSet;
        action  new;
        source  setToCellZone;
        set     leftFluidCellSet;
    }

    // rightSolid
    {
        name    rightSolidCellSet;
        type    cellSet;
        action  new;
        source  boxToCell;
        box     (5 0 0) (10 10 1);
    }
    {
        name    rightSolid;
        type    cellZoneSet;
        action  new;
        source  setToCellZone;
        set     rightSolidCellSet;
    }

    // interface
    {
        name    interfaceZone;
        type    faceZoneSet;
        action  new;
        source boxToFace;
        sourceInfo
        {
            box (4.9999 -1e9 -1e9) (5.0001 1e9 1e9);
        }
    }

);


