FoamFile
{
    version     2.0;
    format      ascii;
    arch        "LSB;label=32;scalar=64";
    class       volScalarField;
    location    "0/rightSolid";
    object      ePotential;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 1 2 -3 0 0 -1 0 ];

internalField   uniform 0;

boundaryField
{
    backFront
    {
        type            empty;
    }
    bottom
    {
        type            zeroGradient;
        value           uniform 0;
    }
    top
    {
        type            zeroGradient;
        value           uniform 0;
    }
    right
    {
        type            fixedValue;
        value           uniform 0;
    }
    rightSolid_to_leftFluid
    {
        type            coupledElectricPotential;
        value           $internalField;
        surfCharge      none;
        surfChargeNbr   surfCharge;
        useImplicit     false;
    }
}


