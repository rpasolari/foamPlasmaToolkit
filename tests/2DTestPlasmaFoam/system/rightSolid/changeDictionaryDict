FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      changeDictionaryDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ePotential
{
    internalField   uniform 0;

    boundaryField
    {
        ".*"
        {
            type            zeroGradient;
        }

        backFront
        {
            type            empty;
        }

        right
        {
            type            fixedValue;
            value           uniform 0;
        }

        "procBoundary.*"
        {
            type            processor;
        }

        rightSolid_to_leftFluid
        {
            type            coupledElectricPotential;
            value           $internalField;
            surfCharge      none;
            surfChargeNbr   surfCharge;
            useImplicit     true;
        }
    }
}

surfCharge
{
    internalField   uniform 0;

    boundaryField
    {
        ".*"
        {
            type            fixedValue;
            value           uniform 0;
        }

        backFront
        {
            type            empty;
        }

        "procBoundary.*"
        {
            type            processor;
            value           uniform 0;
        }
    }
}
